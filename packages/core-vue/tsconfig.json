{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.ce.vue",
    "src/components/code-editor/code-mirror-modes/vue.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
